{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "handlers/**/*.ts"],
  "exclude": ["node_modules", ".serverless", "dist"]
}
